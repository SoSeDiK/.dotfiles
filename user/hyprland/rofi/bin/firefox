#!/usr/bin/env bash

# Import Current Theme
DIR="$HOME/.dotfiles/user/hyprland/rofi"
THEME="simple"
RASI="$DIR/themes/$THEME/firefox.rasi"
BROWSER_BIN=${FIREFOX_BIN:-firefox-nightly}

# Radio command
command="rofi -dmenu -i \
      -theme ${RASI} \
      -hover-select -me-select-entry '' -me-accept-entry MousePrimary \
      -matching fuzzy"


addProfile() {
  printf "$1\n"
}

menu() {
  addProfile "󰄛 default"
  addProfile " private"
  addProfile "󱊈 work"
  addProfile "󱜆 movies"
  addProfile "󰊗 gaming"
}

choice=$(menu | eval ${command} | cut -d. -f1)

# Split by the first space
choice="${choice#* }"

case "$choice" in
    "")
        exit 1
        ;;
    "default")
        $BROWSER_BIN -new-instance --name $BROWSER_BIN-$choice
        ;;
    "private")
        $BROWSER_BIN -new-instance -P $choice --name $BROWSER_BIN-$choice --private-window
        ;;
    *)
        $BROWSER_BIN -new-instance -P $choice --name $BROWSER_BIN-$choice
        ;;
esac

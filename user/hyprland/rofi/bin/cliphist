#!/usr/bin/env bash

# Import Current Theme
BASE_DIR="$HOME/.dotfiles/user/hyprland"
CLIP_DIR="$BASE_DIR/cliphist/scripts/cliphist-rofi-img"

rofi \
    -modi clipboard:$CLIP_DIR \
    -show clipboard -no-levenshtein-sort -hover-select -me-select-entry '' -me-accept-entry MousePrimary \
    -show-icons
